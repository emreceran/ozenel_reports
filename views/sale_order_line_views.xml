<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_add_page_break_field" model="ir.ui.view">
            <field name="name">sale.order.form.page.break</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/list/field[@name='price_subtotal']" position="after">
                    <field name="x_force_page_break" optional="show"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>