<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_sale_order_template2">


            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <t t-call="ozenel_reports.template_sale_order_cover"/>

                        </div>

                        <p style="page-break-after:always;"></p>

                        <div class="page">

                            <t t-call="ozenel_reports.template_sale_order_body"/>
                            <img src="/ozenel_reports/static/img/larkalogo_watermark.jpeg" class="watermark"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <template id="report_sale_order_template3">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <t t-call="ozenel_reports.template_sale_order_cover"/>
                        </div>

                        <p style="page-break-after:always;"></p>

                        <div class="page">
                            <t t-call="ozenel_reports.template_sale_order_body_closed"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <template id="report_sale_order_template4">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <t t-call="ozenel_reports.template_sale_order_cover"/>
                        </div>

                        <p style="page-break-after:always;"></p>

                        <div class="page">
                            <t t-call="ozenel_reports.template_sale_order_body_subtotal"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="sale_order_report_paperformat" model="report.paperformat">
            <field name="name">Customized Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field> <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>

        <record id="report_teklif_open" model="ir.actions.report">
            <field name="name">Teklif Açık</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ozenel_reports.report_sale_order_template2</field>
            <field name="report_file">ozenel_reports.report_sale_order_template2</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="ozenel_reports.sale_order_report_paperformat"/>
        </record>

        <record id="report_teklif_closed" model="ir.actions.report">
            <field name="name">Teklif Kapalı</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ozenel_reports.report_sale_order_template3</field>
            <field name="report_file">ozenel_reports.report_sale_order_template3</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="ozenel_reports.sale_order_report_paperformat"/>
        </record>

        <record id="report_teklif_subtotal" model="ir.actions.report">
            <field name="name">Teklif Bölüm Toplamlı</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ozenel_reports.report_sale_order_template4</field>
            <field name="report_file">ozenel_reports.report_sale_order_template4</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="ozenel_reports.sale_order_report_paperformat"/>
        </record>




    </data>
</odoo>