<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="sale_order_report_customized_header">
            <div class="header">
                <div class="o_clean_header">

                </div>
            </div>


        </template>
        <template id="sale_order_report_customized_footer">
            <div class="footer">
                <small class="page"/>
                /
                <small class="topage"/>

            </div>
        </template>

        <template id="report_sale_order_template2">

            <t t-call="web.html_container">
                <t t-call="ozenel_reports.sale_order_report_customized_header"/>
                <t t-call="ozenel_reports.sale_order_report_customized_footer"/>
                <t t-foreach="docs" t-as="doc">
                    <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
                    <t t-call="web.internal_layout">

                        <t t-set="forced_vat" t-value="doc.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
                        <t t-set="address">
                            <div t-field="doc.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                            <p t-if="doc.partner_id.vat"><t t-out="doc.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/></p>
                        </t>

                        <div class="page text-dark"
                             style="font-family:'Roboto',sans-serif;margin-top:100px; font-size:10px">

                            <div class="row" style="font-family:'Times New Roman',sans-serif; margin-top: 20px; align-items: center;">
                                <!-- Logo Section -->
                                <div class="col-5" style="text-align:left;">
                                    <img src="/sale_order_report/static/description/siemens_logo.jpg" style="height: 100px;" />
                                </div>
                                <div class="col-5" style="text-align:right; padding-right: 5px;">
                                    <img t-if="res_company.logo" class="border" t-att-src="image_data_uri(res_company.logo)" alt="Logo" style="height:100px;" />
                                </div>
                            </div>

                            <!-- Title Section -->
                            <div class="row" style="margin-top: 10px;">
                                <div class="col-12" style="text-align:center;">
                                    <h5 style="font-size:18px; text-transform: uppercase; font-weight: bold; margin-top: 20px;">
                                        <t t-out="doc.name" />
                                    </h5>
                                </div>
                            </div>



                            <!--                            <hr style="height:2px;border-width:0;color:gray;background-color:gray"></hr>-->

                            <table class="table table-borderless" style="font-size: 10px; margin-top:50px">
                                <thead>
                                    <tr>
                                        <th colspan="2" style="text-align:left; width: 65%;">ALICI / TO</th>
                                        <th colspan="2" style="text-align:left">GÖNDEREN / FROM</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="mt-3">
                                        <td style="text-align:left; width: 12%;" >Firma / Company: </td>
                                        <td class="text-start" ><t t-esc="doc.partner_id.name"/></td>
                                        <td style="text-align:left; width: 12%;" >Firma / Company:</td>
                                        <td><span t-field="res_company.name"/></td>
                                    </tr>
                                    <tr>
                                        <td> İsim / Name: </td>
                                        <td> <t t-esc="doc.partner_id.name"/> </td>
                                        <td> İsim / Name: </td>
                                        <td>  <t t-esc="doc.user_id.name"/> </td>
                                    </tr>






                                </tbody>
                            </table>



                            <p style="page-break-after:always"></p>


                            <t t-set="lines_to_report" t-value="doc._get_order_lines_to_report()"/>
                            <t t-set="display_discount" t-value="any(l.discount for l in lines_to_report)"/>

                            <div class="row mt-5" style="font-family:'Times New Roman',sans-serif">
                                <div class="col-5 mt-5" name="company_address" style="text-align:left;  ">
                                    <img src="/sale_order_report/static/description/siemens_logo.jpg"
                                         style="height: 99px"/>
                                </div>

                                <div class="col-7 mt-5">
                                    <div style="text-align:right" >
                                        <img t-if="res_company.logo" class="border" t-att-src="image_data_uri(res_company.logo)" alt="Logo"
                                             style="text-align:right; height:100px;"/>
                                    </div>

                                </div>

                            </div>

                            <table class="table  mt-4">
                                <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                                <thead style="border:1px solid black">

                                    <tr style="background-color:#191970;color:white">
                                        <th name="th_sequence" class="col-1 text-center">Sr.No</th>
                                        <th name="th_name" class="col-2 text-center">Malzeme Kodu</th>
                                        <th name="th_description" class="col-5 text-center">Açıklama</th>
                                        <th name="th_quantity" class="col-1 text-center">Miktar</th>
                                        <th name="th_priceunit" class="col-1 text-center">Birim Fiyat</th>
                                        <!--                                        <th name="th_discount" t-if="display_discount" class="col-1 text-center" groups="product.group_discount_per_so_line">-->
                                        <!--                                            <span>İndirim .%</span>-->
                                        <!--                                        </th>-->
                                        <!--                        <th name="th_taxes" class="text-end">Taxes</th>-->
                                        <th name="th_subtotal" class="col-2 text-center">
                                            <span >Toplam Fiyat</span>
                                            <!--                                            <span groups="account.group_show_line_subtotals_tax_excluded">Toplam Fiyat</span>-->
                                            <!--                                            <span groups="account.group_show_line_subtotals_tax_included">Toplam Fiyat </span>-->
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody">

                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-set="sira" t-value="1"/>

                                    <t t-foreach="lines_to_report" t-as="line">

                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" />
                                        <!--                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>-->
                                        <!--                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>-->

                                        <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="not line.display_type">
                                                <td ><t t-esc="sira"/></td>
                                                <!--                                                <td name="td_sequence" class="text-center"><span t-esc="sira"/></td>-->





                                                <td name="td_name" class="text-center"><span t-field="line.product_template_id"/></td>
                                                <td name="td_description" class="text-center"><span t-field="line.product_id.description_sale"/></td>

                                                <td name="td_quantity" class="text-center">
                                                    <!--                                                    <span t-field="line.product_uom_qty"/>-->
                                                    <t t-esc="'{0:,.0f}'.format(int(line.product_uom_qty))" />
                                                    <span t-field="line.product_uom"/>
                                                </td>
                                                <td name="td_priceunit" class="text-center">
                                                    <span t-field="line.price_unit"
                                                          t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}' />
                                                </td>
                                                <td t-if="display_discount" class="text-center" >
                                                    <!--                                                <td t-if="display_discount" class="text-center" groups="product.group_discount_per_so_line">-->
                                                    <span t-field="line.discount"/>
                                                </td>
                                                <!--                                <td name="td_taxes" class="text-end">-->
                                                <!--                                    <span t-out="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>-->
                                                <!--                                </td>-->
                                                <td t-if="not line.is_downpayment" name="td_subtotal" class="text-center o_price_total">
                                                    <span t-field="line.price_subtotal" />
                                                    <!--                                                    <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>-->
                                                    <!--                                                    <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>-->
                                                </td>
                                                <t t-set="sira" t-value="sira+1"/>

                                            </t>
                                            <t t-elif="line.display_type == 'line_section'">
                                                <t t-set="sira" t-value="sira"/>
                                                <td name="td_section_line" colspan="99">
                                                    <span t-field="line.name"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>
                                            <t t-elif="line.display_type == 'line_note'">
                                                <t t-set="sira" t-value="sira"/>
                                                <td name="td_note_line" colspan="99">
                                                    <span t-field="line.name"/>
                                                </td>
                                            </t>



                                        </tr>




                                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section') and not line.is_downpayment">
                                            <tr class="is-subtotal text-end">
                                                <td name="td_section_subtotal" colspan="99">
                                                    <strong class="mr16">Ara Toplam:</strong>
                                                    <!--                                                      <span style="font-weight: bold;"-->
                                                    <!--                                                            t-esc="current_section.name"-->
                                                    <!--                                                    />-->
                                                    <!--                                                     <strong class="mr16"> Toplamı</strong>-->
                                                    <span
                                                            t-out="current_subtotal"
                                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                                    />
                                                </td>

                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>


                            <br/>
                            <t t-set="lines_to_report" t-value="doc._get_order_lines_to_report()"/>
                            <t t-set="display_discount" t-value="any(l.discount for l in lines_to_report)"/>
<!--                            <div class="clearfix" name="so_total_summary">-->
<!--                                <div id="total" class="row" name="total">-->
<!--                                    <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">-->
<!--                                        <table class="table table-sm">-->
<!--                                            &lt;!&ndash; Tax totals &ndash;&gt;-->
<!--                                            <t t-set="tax_totals" t-value="doc.tax_totals"/>-->
<!--                                            <t t-call="account.document_tax_totals"/>-->
<!--                                        </table>-->
<!--                                    </div>-->
<!--                                </div>-->
<!--                            </div>-->
                            <div class="row col-12">
                                <p>

                                    <b>
                                        Teklifimizi kabul ettiyseniz onaylayarak geri yollayınız
                                    </b>
                                </p>
                            </div>
                            <div style="border:1px solid; padding:5px;">

                                <div class="row col-12">
                                    <p class="col-12">
                                        MES MÜHENDİSLİK ELEKTRİK ELEKTRONİK PROJE VE KON. SİSTEMLERİ tarafından yukarıda verilen teklifi onaylıyorum.
                                    </p>
                                </div>

                                <div class="row col-12" >
                                    <div class="col-4">
                                        Onaylayan Kişi
                                    </div>
                                    <div class="col-4"/>
                                    <div class="col-4">
                                        Kaşe \ İmza
                                    </div>
                                </div>

                                <br/>
                                <br/>
                                <div class="row col-12">
                                    <div class="col-4">
                                        Onay Tarihi
                                    </div>
                                    <div class="col-4"/>
                                    <div class="col-4">

                                    </div>
                                </div>
                                <br/>
                                <div class="row col-12" >
                                    <div class="col-12">
                                        Lütfen İmza Sirkünüzü sipariş onayı ekinde gönderiniz.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <template id="report_saleorder2">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="sale.report_saleorder_document" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>

        <record id="sale_order_report_paperformat" model="report.paperformat">
            <field name="name">Customized Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>




        <record id="report_teklif_detail" model="ir.actions.report">
            <field name="name">Teklif Açıklamalı</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ozenel_reports.report_sale_order_template2</field>
            <field name="report_file">ozenel_reports.report_sale_order_template2</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="ozenel_reports.sale_order_report_paperformat"/>
        </record>

    </data>
</odoo>