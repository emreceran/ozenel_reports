<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="template_purchase_order_body_closed">

            <style type="text/css">
                .bordered-tbody > tbody > tr {
                border-top: 1px solid #dee2e6;
                }


                .watermark {
                position: absolute;
                top: 10%;
                left: 0%;
                width: 100%;
                <!--                opacity: 0.1 !important;-->
                z-index: -100;
                <!--                border: 1px solid white !importan;-->
                }
                .page {
                position: relative;
                }

            </style>


            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />

            <table class="table table-borderless bordered-tbody mx-auto" style="width: 90%;">
                <thead style="display: table-header-group;">
                    <tr>
                        <td colspan="1" style="padding: 0 0 20px 0;">
                            <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" alt="Logo" style="max-height:100px;" />
                        </td>
                        <td colspan="10" class="text-end" style="font-size:11px; margin-top:20px; line-height: 1.5; padding: 0 0 20px 0; vertical-align: top;">
                            <div  style="font-weight:bold; text-transform: uppercase;">
                                <span> ÖZENEL ENERJİ MÜH. ELEKTRİK İNŞ. TURİZM SAN. TİC. LTD. ŞTİ.</span>
                            </div>
                            <div >
                                <span> Fevzi çakmak mh. 10644 sk. no:42 Karatay/KONYA</span>
                            </div>
                            <div t-if="res_company.vat">
                                Selçuk V.D. <span t-field="res_company.vat"/>
                            </div>
                            <div class="">
                                <strong t-if="res_company.phone">
                                    <!--                                    <i class="fa fa-phone" role="img" aria-label="Phone" title="Phone"/> -->
                                    <span t-field="res_company.phone"/>
                                </strong>
                                <strong t-if="res_company.website" class="ms-3">
                                    <!--                                    <i class="fa fa-globe" role="img" aria-label="Website" title="Website"/> -->
                                    <span t-field="res_company.website"/>
                                </strong>
                            </div>
                        </td>
                    </tr>

                    <tr>

                        <td colspan="6" style="padding-top: 20px; padding-bottom: 20px;">
                            <img src="/ozenel_reports/static/img/larkalogo_watermark.jpeg" class="watermark border-0"/>

                            <h4 style="font-size: 14px; margin:0;">TEKLİF MALZEME LİSTESİ</h4>
                        </td>
                    </tr>

                    <tr>
                        <td colspan="4" style="padding: 0; border: none;">
                            <div style="background-color: #0B2B4B; border-top-left-radius: 8px; border-top-right-radius: 8px;">
                                <table style="width: 100%; color: white; text-transform: uppercase; font-size: 10px; font-weight: bold;">
                                    <tbody>
                                        <tr>
                                            <td class="text-start" style="width: 55%; padding: 8px; border-right: 2px solid white;">Malzeme İsmi Ve Özellikleri</td>
                                            <td class="text-center" style="width: 15%; padding: 8px; border-right: 2px solid white;">Marka</td>
                                            <td class="text-center" style="width: 15%; padding: 8px; border-right: 2px solid white;">Miktarı</td>
                                            <td class="text-center" style="width: 15%; padding: 8px;">Birim</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4"><div style="height:5px; width:100%" /></td>
                    </tr>
                </thead>

                <tbody class="sale_tbody">
                    <t t-foreach="doc.order_line" t-as="line">
                        <t t-if="line.display_type == 'line_section'">
                            <tr style="background-color:#0B2B4B; font-weight: bold;">
                                <td name="td_section_line" colspan="4" style="padding: 5px 8px;">
                                    <span t-field="line.name" style="color:white;"/>
                                </td>
                            </tr>
                        </t>

                        <t t-if="not line.display_type">
                            <tr>
                                <td style="width: 55%; font-size: 10px;"><span t-field="line.name_tail"/></td>
                                <td class="text-center" style="width: 15%; font-size: 10px;"><span t-field="line.x_brand_name"/></td>
                                <td class="text-center" style="width: 15%; font-size: 10px;"><span t-field="line.product_uom_qty"/></td>
                                <td class="text-center" style="width: 15%; font-size: 10px;"><span t-field="line.product_uom"/></td>
                            </tr>
                        </t>

                    </t>
                </tbody>
            </table>


        </template>




        <template id="report_purchase_order_template2">


            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.basic_layout">

                        <div class="page">

                            <t t-call="ozenel_reports.template_purchase_order_body_closed"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>



        <record id="purchase_order_report_paperformat" model="report.paperformat">
            <field name="name">Customized Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field> <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>

        <record id="report_purchase_teklif" model="ir.actions.report">
            <field name="name">Teklif Kapalı</field>
            <field name="model">purchase.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ozenel_reports.report_purchase_order_template2</field>
            <field name="report_file">ozenel_reports.report_purchase_order_template2</field>
            <field name="binding_model_id" ref="purchase.model_purchase_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="ozenel_reports.purchase_order_report_paperformat"/>
        </record>


    </data>
</odoo>