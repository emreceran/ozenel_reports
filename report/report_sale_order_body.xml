<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="template_sale_order_body">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
            <t t-set="lines_to_report" t-value="doc._get_order_lines_to_report()"/>

            <table class="table table-borderless mx-auto" style="width: 90%;">
                <thead style="display: table-header-group;">
                    <tr>

                        <td colspan="3" style="padding: 0 0 20px 0;">
                            <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" alt="Logo" style="max-height:100px;" />
                        </td>
                        <td colspan="3" class="text-end" style="font-size:11px; line-height: 1.5; padding: 0 0 20px 0; vertical-align: top;">
                            <div t-if="res_company.name" style="font-weight:bold; text-transform: uppercase;">
                                <span> ÖZENEL ENERJİ MÜH. ELEKTRİK İNŞ. TURİZM SAN. TİC. LTD. ŞTİ.</span>
                            </div>
                            <div t-if="res_company.street or res_company.city">
                                <span> Fevzi çakmak mh. 10644 sk. no:42 Karatay/KONYA</span>
                            </div>
                            <div t-if="res_company.vat">
                                Selçuk V.D. <span t-field="res_company.vat"/>
                            </div>
                            <div class="">
                                <strong t-if="res_company.phone">
                                    <!--                                    <i class="fa fa-phone" role="img" aria-label="Phone" title="Phone"/> -->
                                    <span t-field="res_company.phone"/>
                                </strong>
                                <strong t-if="res_company.website" class="ms-3">
                                    <!--                                    <i class="fa fa-globe" role="img" aria-label="Website" title="Website"/> -->
                                    <span t-field="res_company.website"/>
                                </strong>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td colspan="6" style="padding-top: 20px; padding-bottom: 20px;">
                            <h4 style="font-size: 14px; margin:0;">TEKLİF MALZEME LİSTESİ</h4>
                        </td>
                    </tr>

                    <tr style="background-color:#0B2B4B; text-transform: uppercase;">
                        <th class="text-center" style="color: white; padding: 8px; border: 1px solid #0B2B4B;">Malzeme İsmi Ve Özellikleri</th>
                        <th class="text-center" style="color: white; padding: 8px; border: 1px solid #0B2B4B;">Marka</th>
                        <th class="text-center" style="color: white; padding: 8px; border: 1px solid #0B2B4B;">Miktarı</th>
                        <th class="text-center" style="color: white; padding: 8px; border: 1px solid #0B2B4B;">Birim</th>
                        <th class="text-center" style="color: white; padding: 8px; border: 1px solid #0B2B4B;">Birim Fiyatı</th>
                        <th class="text-center" style="color: white; padding: 8px; border: 1px solid #0B2B4B;">Toplam Fiyat</th>
                    </tr>
                </thead>

                <tbody class="sale_tbody">
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="current_section" t-value="None"/>

                    <t t-foreach="lines_to_report" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" />

                        <t t-if="line.display_type == 'line_section'">
                            <t t-set="current_section" t-value="line"/>
                            <t t-set="current_subtotal" t-value="0"/>
                            <tr style="background-color:#0B2B4B; font-weight: bold;">
                                <td name="td_section_line" colspan="6" style="padding: 5px 8px;">
                                    <span t-field="line.name" style="color:white;"/>
                                </td>
                            </tr>
                        </t>



                        <t t-if="not line.display_type">
                            <t t-if="line.x_force_page_break">
                                <div style="page-break-after: always"/>
                                <br/>
                            </t>
                            <t telse="">
                                <tr>
                                    <td style="font-size: 10px;"><span t-field="line.name"/></td>
                                    <td class="text-center" style="font-size: 10px;">
                                        <span t-field="line.x_brand_name"/>
                                    </td>
                                    <td class="text-center" style="font-size: 10px;">
                                        <span t-field="line.product_uom_qty"/>
                                    </td>
                                    <td class="text-center" style="font-size: 10px;">
                                        <span t-field="line.product_uom"/>
                                    </td>
                                    <td class="text-end" style="font-size: 10px;">
                                        <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                    <td class="text-end" style="font-size: 10px;">
                                        <span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                            </t>


                        </t>

                        <t t-if="line.display_type == 'line_note'">
                            <tr>
                                <td colspan="6" class="text-muted fst-italic ps-4" style="font-size: 10px;">
                                    <span t-field="line.name"/>
                                </td>
                            </tr>
                        </t>

                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-end">
                                <td colspan="6">
                                    <div style="display: inline-block; background-color:#0B2B4B; color:white; padding: 5px 10px; font-weight:bold; font-size: 11px;">
                                        <span class="me-3">ARA TOPLAM</span>
                                        <span t-out="current_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </div>
                                </td>
                            </tr>
                        </t>


                    </t>
                </tbody>
            </table>
        </template>
    </data>
</odoo>